<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:layout_marginHorizontal="15dp"
            android:gravity="center"
            android:background="@drawable/bubble_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <ImageView
                android:id="@+id/ivSneakerImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sneaker_image_sample"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tvSneakerId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGreyTitle"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/tvIsLimited"/>

                <TextView
                        android:id="@+id/tvIsLimited"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="(Limited)"
                        android:textStyle="bold|italic"
                        android:textColor="@color/colorGreen"
                        android:visibility="gone"
                        android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:id="@+id/tvSneakerName"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/tvSneakerCondition"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white"
                        android:id="@+id/tvSneakerCondition"
                        android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tvSneakerSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/tvReleaseDate"/>

                <TextView
                        android:id="@+id/tvReleaseDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white"
                        android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <TextView
                    android:id="@+id/tvSneakerBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"/>

            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end">

                <TextView
                        android:id="@+id/tvReportStolen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Report Stolen"
                        android:background="@drawable/report_stolen_button"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="10dp"
                        android:paddingVertical="3dp"
                        android:paddingStart="30dp"
                        android:paddingEnd="8dp"
                        android:visibility="gone"
                />

                <ImageView
                        android:id="@+id/btnReportStolen"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:padding="5dp"
                        android:background="@drawable/circle_button"
                        android:src="@drawable/ic_report_stolen"/>

            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>