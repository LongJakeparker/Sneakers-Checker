<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.activity.ConfirmRegisterActivity"
    android:background="@android:color/white"
    android:paddingTop="@dimen/activity_margin_16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:layout_gravity="end"
        android:padding="@dimen/activity_margin_12dp"
        android:layout_marginTop="@dimen/activity_margin_22dp"
        android:layout_marginRight="@dimen/activity_margin_12dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_margin_8dp">

        </androidx.viewpager.widget.ViewPager>

        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/dotsIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dotsColor="@color/colorOrangish_alpha_15"
            app:dotsCornerRadius="8dp"
            app:dotsSize="8dp"
            app:dotsSpacing="4dp"
            app:dotsWidthFactor="5"
            app:selectedDotColor="@color/colorOrangish"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="24dp"
        />

    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="115dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_margin_16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_warning"
                    android:drawableTint="@color/colorOrangish"
                    android:text="@string/text_private_key"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/colorOrangish"
                    android:drawablePadding="@dimen/activity_margin_8dp"/>

                <ImageView
                    android:id="@+id/btnCopy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_copy"
                    android:paddingHorizontal="@dimen/activity_margin_12dp"
                    android:tint="@color/colorOrangish"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvPrivateKey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_xlarge"
                android:textColor="@color/colorOrangish"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>