<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/test_background"
        android:paddingHorizontal="@dimen/layout_padding_Horizontal"
        tools:context=".screens.activity.TransferActivity">

    <RelativeLayout
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

        <ImageView
                android:id="@+id/btnBackSell"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_back_arrow"
                android:padding="10dp"
                android:layout_marginLeft="-18dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

        <ImageView
                android:src="@mipmap/logo"
                android:layout_width="@dimen/logo_width"
                android:layout_height="@dimen/logo_heigh"
                android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageView3"
            android:layout_above="@+id/textView3"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/copyright_margin_bottom">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:focusableInTouchMode="true">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product"
                        android:textColor="@android:color/white"
                        android:textSize="23dp"
                />

                <TextView
                        android:id="@+id/tvIsLimited"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGreen"
                        android:textStyle="bold|italic"
                        android:text="(Limited Edition)"
                        android:layout_marginLeft="10dp"
                        android:textSize="17dp"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"
                />

            </LinearLayout>

            <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Id:"
                        android:textColor="@color/colorGreyTitle"
                        android:textSize="17dp"
                        android:textStyle="bold"
                />
                <TextView
                        android:id="@+id/tvItemId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="10dp"
                        android:textSize="17dp"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Brand:"
                        android:textColor="@color/colorGreyTitle"
                        android:textSize="17dp"
                        android:textStyle="bold"
                />
                <TextView
                        android:id="@+id/tvItemBrand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="10dp"
                        android:textSize="17dp"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Model:"
                        android:textColor="@color/colorGreyTitle"
                        android:textSize="17dp"
                        android:textStyle="bold"
                />
                <TextView
                        android:id="@+id/tvItemModelName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="10dp"
                        android:textSize="17dp"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Colorway:"
                        android:textColor="@color/colorGreyTitle"
                        android:textSize="17dp"
                        android:textStyle="bold"
                />
                <TextView
                        android:id="@+id/tvItemColorWay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="10dp"
                        android:textSize="17dp"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Release date:"
                        android:textColor="@color/colorGreyTitle"
                        android:textSize="17dp"
                        android:textStyle="bold"
                />
                <TextView
                        android:id="@+id/tvItemReleaseDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="10dp"
                        android:textSize="17dp"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Size:"
                        android:textColor="@color/colorGreyTitle"
                        android:textSize="17dp"
                        android:textStyle="bold"
                />
                <TextView
                        android:id="@+id/tvItemSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="10dp"
                        android:textSize="17dp"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Condition:"
                        android:textColor="@color/colorGreyTitle"
                        android:textSize="17dp"
                        android:textStyle="bold"
                />
                <TextView
                        android:id="@+id/tvItemCondition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="10dp"
                        android:textSize="17dp"
                />
            </LinearLayout>

            <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Owner's address:"
                    android:textColor="@color/colorGreyTitle"
                    android:textSize="17dp"
                    android:textStyle="bold"
            />

            <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/tvItemOwnerAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="17dp"
            />

            <android.support.constraint.ConstraintLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
            >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transfer Address"
                        android:textColor="@android:color/white"
                        android:textSize="23dp"
                        android:id="@+id/textView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                        android:id="@+id/btnScanAddress"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_scan"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

            </android.support.constraint.ConstraintLayout>

            <EditText
                    android:id="@+id/etTransferAddress"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@android:color/white"
                    android:singleLine="true"/>

            <LinearLayout
                    android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transfer fee:"
                        android:textColor="@color/colorGreyTitle"
                        android:textSize="17dp"
                        android:textStyle="bold"
                />

                <TextView
                        android:id="@+id/tvTransferFee"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="17dp"
                        android:text="0"
                />

                <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="17dp"
                        android:text="VND"
                />

            </LinearLayout>

            <Button
                    android:text="@string/strButton_Next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/button_padding_vertical"
                    android:paddingHorizontal="38dp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/main_button"
                    android:textSize="@dimen/button_text_size"
                    android:id="@+id/btnNextSell"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="20dp"
                    android:visibility="visible"/>

        </LinearLayout>

    </ScrollView>

    <TextView
            android:text="@string/copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:id="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/copyright_text_size"
            android:layout_marginBottom="@dimen/copyright_margin_bottom"
            android:layout_alignParentBottom="true"
    />

</RelativeLayout>