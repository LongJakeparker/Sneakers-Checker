        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bubble_background">

            <ImageView
                android:id="@+id/ivPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_password"
                android:paddingHorizontal="@dimen/activity_margin_16dp"
                android:paddingVertical="@dimen/activity_margin_12dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <FrameLayout
                android:id="@+id/flInputCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivNumber1"
                        android:layout_width="@dimen/passcode_dot_size_login"
                        android:layout_height="@dimen/passcode_dot_size_login"
                        android:src="@drawable/drawable_bg_pass_code"/>

                    <View
                        android:layout_width="@dimen/activity_margin_8dp"
                        android:layout_height="0dp"/>

                    <ImageView
                        android:id="@+id/ivNumber2"
                        android:layout_width="@dimen/passcode_dot_size_login"
                        android:layout_height="@dimen/passcode_dot_size_login"
                        android:src="@drawable/drawable_bg_pass_code"/>

                    <View
                        android:layout_width="@dimen/activity_margin_8dp"
                        android:layout_height="0dp"/>

                    <ImageView
                        android:id="@+id/ivNumber3"
                        android:layout_width="@dimen/passcode_dot_size_login"
                        android:layout_height="@dimen/passcode_dot_size_login"
                        android:src="@drawable/drawable_bg_pass_code"/>

                    <View
                        android:layout_width="@dimen/activity_margin_8dp"
                        android:layout_height="0dp"/>

                    <ImageView
                        android:id="@+id/ivNumber4"
                        android:layout_width="@dimen/passcode_dot_size_login"
                        android:layout_height="@dimen/passcode_dot_size_login"
                        android:src="@drawable/drawable_bg_pass_code"/>

                    <View
                        android:layout_width="@dimen/activity_margin_8dp"
                        android:layout_height="0dp"/>

                    <ImageView
                        android:id="@+id/ivNumber5"
                        android:layout_width="@dimen/passcode_dot_size_login"
                        android:layout_height="@dimen/passcode_dot_size_login"
                        android:src="@drawable/drawable_bg_pass_code"/>

                    <View
                        android:layout_width="@dimen/activity_margin_8dp"
                        android:layout_height="0dp"/>

                    <ImageView
                        android:id="@+id/ivNumber6"
                        android:layout_width="@dimen/passcode_dot_size_login"
                        android:layout_height="@dimen/passcode_dot_size_login"
                        android:src="@drawable/drawable_bg_pass_code"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/etUserPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/transparent"
                    android:maxLength="6"
                    android:inputType="numberDecimal"
                    android:cursorVisible="false"
                    android:layout_marginLeft="@dimen/activity_margin_56dp"/>

            </FrameLayout>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_btn_green_gradient_selector"
        android:text="@string/label_button_register"
        android:layout_marginBottom="@dimen/activity_margin_24dp"
        android:textColor="@color/colorWhite"
        android:enabled="false"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_xlarge"
        android:padding="@dimen/activity_margin_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/activity_margin_24dp"
    />

    <TextView
        android:id="@+id/tvWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Oops!\nThis email is taken already!"
        android:layout_marginTop="@dimen/activity_margin_16dp"
        android:padding="@dimen/activity_margin_12dp"
        android:textColor="@color/colorOrangish"
        android:lineSpacingExtra="4dp"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:background="@drawable/warning_background"
        android:visibility="gone"
        android:layout_marginHorizontal="@dimen/activity_margin_24dp"
    />

    <include
        android:id="@+id/pb_loading"
        layout="@layout/loading_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>