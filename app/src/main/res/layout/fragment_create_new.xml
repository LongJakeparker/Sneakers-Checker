<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".Screens.AuthenticationScreen.CreateNewFragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3">
        <Button
                android:text="@string/strButton_CreateNew"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/button_padding_vertical"
                android:paddingHorizontal="28dp"
                android:textAllCaps="false"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorTanHide"
                android:background="@drawable/main_button"
                android:drawableLeft="@drawable/ic_createnew"
                android:textSize="@dimen/button_text_size"
                android:id="@+id/btnNewWalletAuthen"/>
    </LinearLayout>
    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="@dimen/app_name_size"
            android:textColor="@color/colorCasal"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/app_name_margin_top"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorCasal"
            android:id="@+id/textView3"
            android:layout_marginBottom="@dimen/copyright_margin_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="120dp"
            android:layout_marginHorizontal="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView">
        <TextView
                android:text="@string/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tite_text_size"
                android:textColor="#000"
                android:id="@+id/textView2"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText"/>
        <TextView
                android:text="@string/pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="@dimen/tite_text_size"
                android:textColor="#000"
                android:id="@+id/textView4"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:ems="10"
                android:id="@+id/editText2"/>
        <TextView
                android:text="@string/pin_reenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="@dimen/tite_text_size"
                android:textColor="#000"
                android:id="@+id/textView5"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:ems="10"
                android:id="@+id/editText3"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>