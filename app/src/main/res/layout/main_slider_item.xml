<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/ivSliderImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/drawable_explore_pager_1"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/tvSliderContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/greyishBrown"
        android:text="@string/text_explore_1"
        android:textSize="@dimen/text_size_xxxlarge"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/activity_margin_24dp"
        android:layout_alignParentTop="true"/>

</RelativeLayout>