<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/layout_padding_Horizontal"
        android:background="@mipmap/test_background"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".screens.authenticationScreen.RegisterUserInfoFragment">

    <ImageView
            android:src="@mipmap/logo"
            android:layout_width="@dimen/logo_width"
            android:layout_height="@dimen/logo_heigh"
            android:id="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/logo_margin_top"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:text="@string/copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:id="@+id/textView3"
            android:textSize="@dimen/copyright_text_size"
            android:layout_marginBottom="@dimen/copyright_margin_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/linearLayout"
            android:paddingVertical="@dimen/tuto_padding_vertical"
            android:paddingHorizontal="@dimen/layout_padding_Horizontal"
            android:background="@drawable/bubble_background"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tuto_print"
                android:textSize="@dimen/text_title_size"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textAlignment="center"/>

        <View
                android:layout_width="@dimen/tutoline_width"
                android:layout_height="@dimen/tutoline_height"
                android:background="@android:color/white"
                android:layout_marginTop="@dimen/tutoline_margin_top"
                android:layout_gravity="center"/>

        <TextView
                android:id="@+id/tvUserAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_marginTop="30dp"
                android:textSize="@dimen/text_title_size"
                android:text=""/>

        <Button
                android:id="@+id/btnCopyToClipBoard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Copy To Clipboard"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorYellow"
                android:layout_gravity="end"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_marginTop="30dp"
                android:textSize="@dimen/text_title_size"
                android:text="Note: You needs to wait 10 minutes to receive money to create your first transaction"/>

    </LinearLayout>

    <Button
            android:text="@string/strButton_GoToHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="28dp"
            android:textAllCaps="false"
            android:layout_marginBottom="40dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/main_button"
            android:textSize="@dimen/button_text_size"
            android:textAlignment="center"
            android:drawableRight="@drawable/ic_arrow_next_button"
            android:id="@+id/btnGoToHome"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>