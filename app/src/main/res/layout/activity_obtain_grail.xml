<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.activity.ObtainGrailActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_bg_obtain_grail"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:background="@drawable/img_bg_obtain_grail_info"
                android:paddingVertical="@dimen/activity_margin_20dp"
                android:paddingHorizontal="@dimen/activity_margin_36dp"
                android:layout_marginHorizontal="@dimen/activity_margin_24dp"
                android:layout_marginBottom="@dimen/activity_margin_10dp">

                <ImageView
                    android:id="@+id/ivBrandLogo"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/logo_adidas"/>

                <TextView
                    android:id="@+id/tvItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NMD R1 Trainer"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_xxlarge"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/activity_margin_16dp"/>

                <TextView
                    android:id="@+id/tvItemBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adidas"
                    android:textColor="@color/colorPutty"
                    android:textSize="@dimen/text_size_large"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginTop="@dimen/activity_margin_16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/activity_margin_8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_large"
                        android:text="@string/label_size"
                        android:textColor="@android:color/black"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvItemSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_xlarge"
                        android:textStyle="bold"
                        android:text="7"
                        android:gravity="end"
                        android:layout_marginLeft="@dimen/activity_margin_10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/activity_margin_8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_large"
                        android:text="@string/label_release_date"
                        android:textColor="@android:color/black"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvItemReleaseDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_xlarge"
                        android:textStyle="bold"
                        android:text="August 28, 2019"
                        android:gravity="end"
                        android:layout_marginLeft="@dimen/activity_margin_10dp"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvCongrats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/img_ribbon"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="@dimen/activity_margin_5dp"
                android:text="@string/text_congrats"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_xxxlarge"
                android:textStyle="bold"
                android:paddingTop="@dimen/activity_margin_10dp"/>

        </FrameLayout>

        <TextView
            android:id="@+id/tvDesCongrats"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="@string/text_des_obtain_grail"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_large"
            android:gravity="center"
            android:layout_marginTop="@dimen/activity_margin_24dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_btn_green_gradient_selector"
        android:text="@string/label_button_done"
        android:layout_marginBottom="@dimen/activity_margin_24dp"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_xlarge"
        android:padding="@dimen/activity_margin_16dp"
        android:layout_marginHorizontal="@dimen/activity_margin_24dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>