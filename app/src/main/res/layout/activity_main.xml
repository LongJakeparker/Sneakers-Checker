<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".MainActivity">

    <RelativeLayout
        android:paddingTop="@dimen/activity_margin_18dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/btnMenuMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu"
            android:background="@android:color/transparent"
            android:padding="@dimen/activity_margin_12dp"
            android:layout_marginTop="@dimen/activity_margin_16dp"
            android:layout_marginEnd="@dimen/activity_margin_12dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_Explore"
            android:textSize="@dimen/text_size_big"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="@dimen/activity_margin_24dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/btnMenuMain"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnMenuMain"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpagerMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_margin_32dp"
            android:layout_below="@+id/title"/>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true">

        <include layout="@layout/layout_drawer_menu"/>

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
