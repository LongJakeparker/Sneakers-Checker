<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/test_background"
        tools:context=".screens.activity.CollectionActivity">

    <ImageView
            android:src="@mipmap/logo"
            android:layout_width="@dimen/logo_width"
            android:layout_height="@dimen/logo_heigh"
            android:id="@+id/imageView3"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerCollection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imageView3"
            android:layout_above="@+id/textView3"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/copyright_margin_bottom">

    </android.support.v7.widget.RecyclerView>

    <TextView
            android:text="@string/copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:id="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/copyright_text_size"
            android:layout_marginBottom="@dimen/copyright_margin_bottom"
            android:layout_alignParentBottom="true"
    />

</RelativeLayout>