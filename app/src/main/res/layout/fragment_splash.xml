<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.authenticationScreen.SplashFragment">


    <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
    android:src="@mipmap/background_splash" android:scaleType="fitXY"/>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="@string/copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvCopyright"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/copyright_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="@dimen/copyright_margin_bottom"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
                android:src="@mipmap/logo"
                android:layout_width="@dimen/logo_splash_width"
                android:layout_height="@dimen/logo_splash_heigh"
                android:id="@+id/imageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="110dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>