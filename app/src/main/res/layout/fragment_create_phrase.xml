<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".Screens.AuthenticationScreen.CreatePhraseFragment">

    <Button
            android:text="@string/strButton_Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/button_padding_vertical"
            android:paddingHorizontal="28dp"
            android:textAllCaps="false"
            android:textColor="@color/colorTanHide"
            android:background="@drawable/main_button"
            android:drawableLeft="@drawable/ic_next"
            android:textSize="@dimen/button_text_size"
            android:id="@+id/btnNewWalletAuthen"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            android:layout_marginBottom="@dimen/create_new_button_margin_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="20dp"/>

    <Button
            android:text="@string/strButton_Print_Phrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/button_padding_vertical"
            android:paddingHorizontal="28dp"
            android:textAllCaps="false"
            android:textColor="@color/colorTanHide"
            android:background="@drawable/main_button"
            android:drawableLeft="@drawable/ic_print"
            android:textSize="@dimen/button_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="@dimen/create_new_button_margin_bottom"/>

    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="@dimen/app_name_size"
            android:textColor="@color/colorCasal"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/app_name_margin_top"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorCasal"
            android:id="@+id/textView3"
            android:layout_marginBottom="@dimen/copyright_margin_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="@string/tuto_print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp"
            android:paddingHorizontal="50dp"
            android:textAlignment="center"
            android:textColor="#000"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <FrameLayout
            android:layout_width="@dimen/tutoline_width"
            android:layout_height="@dimen/tutoline_height"
            android:layout_marginTop="@dimen/tutoline_margin_top"
            android:background="#000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" android:id="@+id/frameLayout">

    </FrameLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout" android:id="@+id/linearLayout">
        <TextView
                android:text="@string/your_languages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:id="@+id/textView7"/>
        <Spinner
                android:layout_width="@dimen/spinner_width"
                android:layout_height="wrap_content"
                style="@style/SpinnerTheme"
                android:id="@+id/spinner"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="20dp">
        <TextView
                android:text="@string/your_phrase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"/>
        <Spinner
                android:layout_width="@dimen/spinner_width"
                style="@style/SpinnerTheme"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>