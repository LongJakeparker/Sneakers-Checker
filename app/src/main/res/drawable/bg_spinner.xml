<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape>
                    <padding android:bottom="10dp" android:top="10dp" /><!--For padding for all sides-->
                </shape>
            </item>

            <item android:gravity="center_vertical|right"
                  android:drawable="@drawable/drop_down_arrow"
                  android:bottom="10dp"
                  android:width="10dp"
                  android:height="5dp"/>

            <item android:gravity="bottom"
                  android:height="1dp"
            >
                <shape
                        android:shape="rectangle">
                    <solid android:color="#CBCFD0" />

                </shape>
            </item>

        </layer-list>

    </item>

</selector>