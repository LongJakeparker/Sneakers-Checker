<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="@dimen/activity_margin_8dp"
        android:top="@dimen/activity_margin_8dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">
            <solid android:color="@color/gray_f4f4f4"/>
            <corners android:radius="@dimen/dimen_radius_button_8dp"/>
        </shape>
    </item>

    <item
        android:right="@dimen/activity_margin_8dp"
        android:bottom="@dimen/activity_margin_8dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">
            <solid android:color="@color/colorWhite"/>
            <stroke
                android:color="@color/colorPutty"
                android:width="1dp"/>
            <corners android:radius="@dimen/dimen_radius_button_8dp"/>
        </shape>
    </item>

</layer-list>